<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbarOBuy">
    </android.support.v7.widget.Toolbar>

    <!--Button-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="center"
            android:textSize="@dimen/h2"
            android:textColor="@color/colorAccent"
            android:background="#b4ffffff"
            android:text="รายงานการขายน้ำยาง"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:drawableLeft="@drawable/latex"/>

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/h2"
            android:textColor="@color/colorAccent"
            android:background="#b4ffffff"
            android:text="รายงานการขายยางแผ่น"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:drawableLeft="@drawable/sheet"/>

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/h2"
            android:textColor="@color/colorAccent"
            android:background="#b4ffffff"
            android:text="รายงานการขายยางก้อน"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:drawableLeft="@drawable/cube"/>

    </LinearLayout>

</LinearLayout>