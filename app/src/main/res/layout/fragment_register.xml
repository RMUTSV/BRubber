<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbarRegister">

    </android.support.v7.widget.Toolbar>

    <!--Content-->
    <LinearLayout
        android:background="#b4ffffff"
        android:padding="@dimen/margin"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Logo-->
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <!--Name Store-->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ICon-->
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Text Name-->
            <EditText
                android:hint="@string/name_store"
                android:id="@+id/edtNameStore"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Id Store-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ICon-->
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_idstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Text Name-->
            <EditText
                android:id="@+id/edtIdStore"
                android:inputType="text"
                android:hint="@string/id_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!--Password-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ICon-->
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Text Name-->
            <EditText
                android:id="@+id/edtPassword"
                android:inputType="text"
                android:hint="@string/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Button-->
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Save Button-->
            <Button
            android:textSize="@dimen/h2"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:id="@+id/btnSave"
            android:text="บันทึก"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

            <!--Cancel-->
            <Button
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/h2"
            android:textColor="#ffffff"
            android:background="#b4000000"
            android:id="@+id/btnCancel"
            android:text="ยกเลิก"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>